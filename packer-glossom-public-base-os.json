{
    "builders": [{
        "type": "amazon-ebs",
        "ssh_pty": true,
        "region": "ap-northeast-1",
        "source_ami": "ami-afb09dc8",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ssh_timeout": "2m",
        "ami_name": "glossom-public-base-os-1.0.0"
    }],
    "provisioners": [{
        "type": "shell",
        "inline": [
            "sudo apt install -y -q git && sudo rm -rf /tmp/glossom-public-base-os",
            "git clone https://github.com/glossom-dev/glossom-public-base-os.git /tmp/glossom-public-base-os",
            "bash -lc 'cd /tmp/glossom-public-base-os && ./init.sh'"
        ]
    }]
}
